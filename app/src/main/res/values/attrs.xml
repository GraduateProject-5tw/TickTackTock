<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        max 最大進度
        startAngle 進度從圓環的哪個角度開始走
        backColor 圓環內部的填充色
        roundColor 圓環的顏色
        roundProgressColor 圓環進度的顏色
        roundWidth 圓環寬度
        textColor 中心文字的顏色
        textSize 中心文字的大小
        textIsDisplayable 中心文字是否顯示
        style = 0/1 進度的風格，實心或者空心
     -->
    <declare-styleable name ="RingProgressBar">
        <attr name ="max" format ="integer"></attr>
        <attr name ="startAngle" format ="integer"></attr>
        <attr name ="roundColor" format ="color"/>
        <attr name ="roundProgressColor" format ="color"/>
        <attr name ="roundWidth" format="dimension"></attr>
        <attr name ="backColor" format ="color"/>
        <attr name ="textColor" format ="color"/>
        <attr name ="textSize" format ="dimension"/>
        <attr name ="textIsDisplayable" format ="boolean"></attr>
        <attr name ="style">
            <enum name ="STROKE" value="0"></enum>
            <enum name ="FILL" value ="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="WeekView">
        <attr name="firstDayOfWeek" format="enum">
            <enum name="sunday" value="1" />
            <enum name="monday" value="2" />
            <enum name="tuesday" value="3" />
            <enum name="wednesday" value="4" />
            <enum name="thursday" value="5" />
            <enum name="friday" value="6" />
            <enum name="saturday" value="7" />
        </attr>
        <attr name="hourHeight" format="dimension" />
        <attr name="textsizee" format="dimension" />
        <attr name="eventTextSize" format="dimension" />
        <attr name="headerColumnPadding" format="dimension" />
        <attr name="headerRowPadding" format="dimension" />
        <attr name="columnGap" format="dimension" />
        <attr name="headerColumnTextColor" format="color" />
        <attr name="noOfVisibleDays" format="integer" />
        <attr name="headerRowBackgroundColor" format="color" />
        <attr name="dayBackgroundColor" format="color" />
        <attr name="hourSeparatorColor" format="color" />
        <attr name="todayBackgroundColor" format="color" />
        <attr name="todayHeaderTextColor" format="color" />
        <attr name="hourSeparatorHeight" format="dimension" />
        <attr name="eventTextColor" format="color" />
        <attr name="eventPadding" format="dimension" />
        <attr name="headerColumnBackground" format="color" />
        <attr name="dayNameLength" format="enum">
            <enum name="length_short" value="1" />
            <enum name="length_long" value="2" />
        </attr>
        <attr name="overlappingEventGap" format="dimension" />
        <attr name="eventMarginVertical" format="dimension" />
        <attr name="xScrollingSpeed" format="float" />
    </declare-styleable>

    <declare-styleable name="WeekHeaderView">
        <attr name="firstDayOfWeek2" format="enum">
            <enum name="sunday" value="1" />
            <enum name="monday" value="2" />
            <enum name="tuesday" value="3" />
            <enum name="wednesday" value="4" />
            <enum name="thursday" value="5" />
            <enum name="friday" value="6" />
            <enum name="saturday" value="7" />
        </attr>
        <attr name="headerWeekLabelTextSize" format="dimension" />
        <attr name="headerDayLabelTextSize" format="dimension" />
        <attr name="headerWeekLabelTextColor" format="color" />
        <attr name="headerDayLabelNormalTextColor" format="color" />
        <attr name="headerDayLabelTodayTextColor" format="color" />
        <attr name="headerBackgroundColor" format="color"/>
        <attr name="headerColumnGap" format="dimension" />
        <attr name="headerRowGap" format="dimension" />
        <attr name="headerPaddingLeft" format="dimension" />
        <attr name="headerPaddingRight" format="dimension" />
        <attr name="headerPaddingTop" format="dimension" />
        <attr name="headerPaddingBottom" format="dimension" />
        <attr name="headerFocusTextColor" format="color"/>
        <attr name="headerFocusBackgroundColor" format="color"/>
        <attr name="headerFocusSameDayBackgroundColor" format="color"/>
        <attr name="headerFocusSameDayTextColor" format="color"/>
    </declare-styleable>

</resources>