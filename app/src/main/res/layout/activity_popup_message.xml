<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transparentBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".PopupMessage"
    android:theme="@style/Theme.Transparent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/txt_tit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            android:text="@string/confirmTitle"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:background="#f8f7fc"/>
        <TextView
            android:id="@+id/txt_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center|top"
            android:text="現在是讀書時間唷，確定要使用嗎？\n\n若使用，計時將會停止。"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/button_border"
                android:clickable="true"
                android:text="確 定 使 用"
                android:textColor="@color/light_slate_Blue"
                android:textStyle="bold"
                android:textSize="13dp"
                android:focusable="true" />

            <Button
                android:id="@+id/btn_no"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/button_border"
                android:clickable="true"
                android:text="放 棄 使 用"
                android:textColor="@color/light_slate_Blue"
                android:textStyle="bold"
                android:textSize="13dp"
                android:focusable="true" />
        </LinearLayout>

</LinearLayout>