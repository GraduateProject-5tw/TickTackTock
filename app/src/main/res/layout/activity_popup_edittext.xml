<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <TextureView
        android:id="@+id/message_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_tit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="30dp"
                    android:paddingVertical="4dp"
                    android:textColor="#8a82cf"
                    android:textSize="20sp"
                    android:background="@drawable/dialog_border"/>
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingHorizontal="30dp"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_no"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/dialog_button_border_left"
                    android:clickable="true"
                    android:text="取消"
                    android:textColor="#6f68b0"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:focusable="true" />

                <Button
                    android:id="@+id/btn_yes"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/dialog_button_border_right"
                    android:clickable="true"
                    android:text="下一步→"
                    android:textColor="#6f68b0"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
